{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Organization level configuration for automated dependency updates",
  "extends": [
    "config:best-practices",
    ":preserveSemverRanges",
    ":automergeLinters",
    ":automergePatch",
    ":automergeTypes",
    ":automergeMinor",
    ":semanticCommits",
    ":rebaseStalePrs",
    ":configMigration",
    "group:monorepos",
    "group:recommended",
    "replacements:all",
    "workarounds:all",
    ":gitSignOff",
    ":pinSkipCi"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "packageManagers": ["pnpm"],
      "lockFileMaintenance": {
        "enabled": true
      },
      {
        "matchPackagePatterns": ["*"],
        "groupName": "all dependencies",
        "packageManagers": ["pnpm"]
      }      
    }
  ],
  "dependencyDashboardTitle": "ðŸ“Š Dependency Dashboard",
  "dependencyDashboardApproval": true,
  "dependencyDashboardAutoclose": true,
  "dependencyDashboardHeader": "[Z-Shell](https://www.zshell.dev) | [Renovate Preset](https://github.com/z-shell/.github/blob/main/renovate-config.json)",
  "assigneesFromCodeOwners": true,
  "postUpdateOptions": ["npmDedupe", "pnpmDedupe", "yarnDedupeHighest"],
  "labels": ["renovate ðŸ“¦"]
}
